MainLayout:
    screen_manager : screen_manager


    ScreenManager:
        id: screen_manager
        home: home

        Screen:
            id: home
            name: "home"
            MDCard:
                size_hint: None, None
                size: 400, 500
                pos_hint: {"center_x":  0.5, "center_y": 0.5}
                elevation: 10
                padding: 10
                spacing:20
                orientation: 'vertical'

                MDLabel:
                    id: welcome_label
                    text: "WELCOME"
                    font_size: 40
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextField:
                    id:user
                    hint_text:"Username"
                    icon_left: "account"
                    size_hint_x: None
                    width: 300
                    font_size: 14
                    pos_hint: {"center_x": 0.5}

                MDTextField:
                    id:password
                    hint_text:"password"
                    icon_left: "eye-off"
                    size_hint_x: None
                    width: 300
                    font_size: 14
                    pos_hint: {"center_x": 0.5}
                    password: True

                MDRoundFlatButton:
                    text: "LOG IN"
                    font_size: 12
                    size_hint_x: 0.6
                    pos_hint: {"center_x": 0.5}
                    on_press:screen_manager.current = "logged"

                MDRoundFlatButton:
                    text: "CLEAR"
                    size_hint_x: 0.6
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    on_press: app.clear()

        Screen:
            id:logged
            name: "logged"

            MDLabel:
                text: "Current Schedules"
                halign: "center"
                pos_hint: {"center_x": 0.5, "center_y": 0.9}

            MDRaisedButton:
                text: "Test"
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                size_hint: 1, 0.2
                md_bg_color: app.theme_cls.primary_dark
                on_press:screen_manager.current = "s1_list"


            MDRaisedButton:
                text: "Test2"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 1, 0.2
                md_bg_color: app.theme_cls.primary_light
                on_press:screen_manager.current = "schedule2"

            MDRaisedButton:
                text: "Test3"
                pos_hint: {"center_x": 0.5, "center_y": 0.3}
                size_hint: 1, 0.2
                md_bg_color: app.theme_cls.primary_dark

            MDRaisedButton:
                text: "Test4"
                pos_hint: {"center_x": 0.5, "center_y": 0.1}
                size_hint: 1, 0.2
                md_bg_color: app.theme_cls.primary_light

        Screen:
            id: s1_list
            name: "s1_list"

            MDScrollView:

                MDList:
                    id: list_id

                    ThreeLineIconListItem:
                        text: "Three-line item with avatar"
                        secondary_text: "Secondary text here"
                        tertiary_text: "fit more text than usual"

                        IconLeftWidget:
                            icon: "gitlab"


                    OneLineAvatarIconListItem:
                        on_release:app.date_picker(self)

                        IconLeftWidget:
                            icon: "gitlab"

                    OneLineAvatarIconListItem:
                        id:testing

                        on_release: app.date_picker(self)


                        IconLeftWidget:
                            icon: "github"

                    OneLineAvatarIconListItem:
                        on_release: print("Click 2!")

                        IconLeftWidget:
                            icon: "gitlab"

                    OneLineAvatarIconListItem:
                        on_release: print("Click!")

                        IconLeftWidget:
                            icon: "github"

                    OneLineAvatarIconListItem:
                        on_release: print("Click 2!")

                        IconLeftWidget:
                            icon: "gitlab"

        Screen:
            id:datainsert
            name:"datainsert"
            MDCard:
                size_hint: None, None
                size: 400, 500
                pos_hint: {"center_x":  0.5, "center_y": 0.5}
                elevation: 10
                padding: 10
                spacing:20
                orientation: 'vertical'

                MDLabel:
                    id: welcome_label
                    text: "Adding a task"
                    font_size: 40
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextField:
                    id:taskdecrip
                    hint_text:"Task Name"
                    icon_left: "tooltip-edit"
                    size_hint_x: None
                    width: 300
                    font_size: 14
                    pos_hint: {"center_x": 0.5}

                MDIconButton:
                    id: taskclock
                    icon: "calendar-clock"
                    size_hint_x: 0.2
                    pos_hint: {"center_x": 0.2}
                    md_bg_color: app.theme_cls.primary_light
                    on_press:app.date_picker()


                MDTextField:
                    id:duedate
                    hint_text:"Due Date"
                    icon_left: "clock-time-nine"
                    size_hint_x: None
                    width: 300
                    font_size: 14
                    pos_hint: {"center_x": 0.5}

                MDRoundFlatButton:
                    id: boton
                    text: "Add"
                    font_size: 12
                    size_hint_x: 0.6
                    pos_hint: {"center_x": 0.5}
                    on_press: app.submit()



                MDRoundFlatButton:
                    text: "Cancel"
                    size_hint_x: 0.6
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    on_press: app.show_record()

        Screen:
            id:schedule2
            name: "schedule2"

            MDScrollView:

                MDList:
                    id: container2

            MDIconButton:
                icon: "plus"
                on_press: screen_manager.current = "datainsert"
